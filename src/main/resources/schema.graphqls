type Link {
    id: ID!
    url: String!
    description: String!
}

type Query {
    allLinks: [Link]
    link(id: Int): Link
}

type Mutation {
    createUser(name: String!, authProvider: AuthData!): User
    createLink(url: String!, description: String!): Link
}

type User {
    id: ID!
    name: String!
    email: String
    password: String
}

input AuthData {
    email: String!
    password: String!
}

schema {
    query: Query
    mutation: Mutation
}

